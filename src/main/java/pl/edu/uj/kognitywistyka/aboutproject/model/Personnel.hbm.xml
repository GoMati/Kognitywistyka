<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="pl.edu.uj.kognitywistyka.aboutproject.model.Personnel" table="k_Kadra">
		<id name="personnelId" column="Id">
			<generator class="increment"/>
		</id>
		<property name="name" column="Imie"/>
		<property name="surname" column="Nazwisko"/>
		<property name="title" column="Tytul"/>
		<property name="description" column="Opis"/>
		<property name="photo" column="Zdjecie"/>
		
		<many-to-one name="position" cascade="persist,merge,save-update" class="pl.edu.uj.kognitywistyka.aboutproject.model.Position" column="Stanowisko"/>
   </class>
</hibernate-mapping>